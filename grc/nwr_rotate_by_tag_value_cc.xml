<block>
  <name>Rotate by Tag Value</name>
  <key>nwr_rotate_by_tag_value_cc</key>
  <category>[nwr]</category>
  <import>import nwr</import>
  <make>nwr.rotate_by_tag_value_cc($tagname, $scale_factor, $vlen)</make>

  <param>
    <name>Tag Name</name>
    <key>tagname</key>
    <type>string</type>
  </param>

  <param>
    <name>Scale Factor</name>
    <key>scale_factor</key>
    <value>-math.pi/(samp_rate/2.0)</value>
    <type>float</type>
  </param>

  <param>
    <name>Vec Length</name>
    <key>vlen</key>
    <value>1</value>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>

</block>
